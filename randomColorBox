<!doctype html>
<html lang="ko">
	<head>
		<meta charset="utf-8">
		<style>
			*{ margin 0; padding 0; }
			.zB { width: 50px; height: 50px; border: 1px solid yellow; 
			}
		</style>
	</head>
	<body>
		<script>
			function printBox ( boxCount ) {
				for(let i=0; i<boxCount; i++) {
					let rColor = Math.floor( Math.random() * 255 + 1) + 0;
					let gColor = Math.floor( Math.random() * 255 + 1) + 0;
					let bColor = Math.floor( Math.random() * 255 + 1) + 0;
					// alert( rColor + " " + gColor + " " + bColor );
					let printDiv = '<div class="zB" style="background-color: rgb(';
													printDiv += rColor + ", ";
													printDiv += gColor + ", ";
													printDiv += bColor + ');"></div>';
					document.write(printDiv);
				}
			}
			const boxCount = parseInt(prompt("BOX", 1));
			printBox( boxCount );
		</script>
	</body>
</html>
