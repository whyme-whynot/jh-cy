 * 자체 수정
 ****/
<!doctype html>
<html lang="ko">
        <head>
                <meta charset="utf-8">
                <style>
                        *{ margin: 0; padding: 0; }
                        .zB {
                        width: 50px; height: 50px;
                        border: 1px solid yellow;
                        }
                </style>
        </head>
        <body>
                <script>
                        function printBox(boxCount) {
                                for(let i=0; i<boxCount; i++) {
                                        let rColor = Math.floor(Math.random()*256);
                                        let gColor = Math.floor(Math.random()*256);
                                        let bColor = Math.floor(Math.random()*256);
                                        //alert(rColor + " " + gColor + " " + bColor );
                                        let printDiv = '<div class="zB" style="background-color: rgb(`${rColor}, ${gColor}, ${bColor}`)"></div>';
                                        document.write(printDiv);
                                }
                        }
                        const boxCount = parseInt(prompt("Box", 1));
                        printBox(boxCount);
                </script>
        </body>
</html>
